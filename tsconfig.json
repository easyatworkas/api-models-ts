{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "outFile": "dist/index.js",
    "strict": true,
    "allowJs": true,
    "module": "system",
    "moduleResolution": "Node",
    "declaration": true,
    "target": "es6",
    "lib": [
      "es2022"
    ]
  }
}
